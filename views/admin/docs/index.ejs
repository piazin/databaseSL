<%- include ('../../partials/header'); %>
<body>
    <%- include ('../../partials/navbar'); %>
    <div class="container my-3">
        <h2>Artigos</h2>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% documents.forEach(document => { %>
                    <tr>
                        <td><%= document.id %></td>
                        <td><%= document.title %></td>
                        <td><%= document.slug %></td>
                        <td><%= document.category.title %></td>
                        <td>
                            <a href="/admin/docs/edit/<%= document.id %>" class="btn btn-warning"><ion-icon name="create-outline"></ion-icon></a>
                            <form method="post" action="/docs/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                                <input type="hidden" name="id" value="<%= document.id %>">
                                <button class="btn btn-danger" type="submit"><ion-icon name="trash-outline"></ion-icon></button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <a href="/admin/docs/new" class="btn-float"><ion-icon name="add-sharp"></ion-icon></a>
</body>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/script.js"></script>
<%- include ('../../partials/footer'); %>