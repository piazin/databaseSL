<%- include ('../../partials/header'); %>
<body>
    <%- include ('../../partials/navbarhome'); %>
    <div class="container">
        <% result.articles.rows.forEach(article => { %>
            <div class="card my-4">
                <div class="card-header">
                    <h3><%= article.title %></h3>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-dark">Ler Artigo</a>
                </div>
            </div>
        <% }) %>
        <nav>
            <ul class="pagination">
                <% if(result.page >= 2){ %>
                    <li class="page-item"><a href="/articles/page/<%= result.page - 1 %>" class="page-link mx-1">
                        <ion-icon name="arrow-back-outline"></ion-icon>
                    </a></li>
                <% } else if(result.page <= 2) { %>
                    <li class="page-item"><a href="/" class="page-link mx-1">
                        <ion-icon name="arrow-back-outline"></ion-icon>
                    </a></li>
                <% } %>
                
              <% if(result.next){ %>
                <li class="page-item"><a class="page-link mx-1" href="/articles/page/<%= result.page + 1%>">
                    <ion-icon name="arrow-forward-outline"></ion-icon>
                  </a></li>
              <% } %>
              
            </ul>
        </nav>
    </div>
</body>
<%- include ('../../partials/footer'); %>